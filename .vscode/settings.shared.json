{
  "path-autocomplete.pathMappings": {
    "$root": {
      "conditions": [
        { "when": "markdowns/ja/**", "value": "${workspaceFolder}/docs/ja" }
      ]
    }
  },
  "textlint.autoFixOnSave": true,
  "markdownlint.config": {
    "MD033": false,
    "MD013": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true,
    "**/.ruby-lsp": true,
    "docs/*/_build": true
  }
}
